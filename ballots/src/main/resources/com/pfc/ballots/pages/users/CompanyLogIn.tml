<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
   
	<t:border>
	
		
			<h1>Company Access</h1>
			<infouser>
			<t:zone t:id="logForm" id="logForm">
			<t:form t:zone="^">
			
				<span class="error">
					<t:if test="fillFields">
							Rellene todos los campos
					</t:if>
					<t:if test="companyFailure">
							Empresa no registrada
					</t:if>
					<t:if test="authenticationFailure">
							Nombre de usuario o contraseña incorrectos
					</t:if>
					<t:if test="notactive">
							Compa�ia no activa
					</t:if>
				</span>
			
				<label>Company</label><div><input type="text" t:type="textfield" t:value="companyName"/></div>
				<label>Usuario</label><div><input type="text" t:type="textfield" t:value="email"/></div>
				<label>Pass</label><div><input type="password" t:type="textfield" t:value="password"/></div><br/><br/>
				
				<input type="submit" value="acceder"/><br/>
				<t:actionlink t:id="forgottenPass">Olvido su contrase�a</t:actionlink>		
			</t:form>
			</t:zone>
			</infouser>	
	
	</t:border>
	
		
			
	


</html>