<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="refresh" content="5; URL=Index" />
<head>
<title>${message:page-title}</title>
<link rel="icon" type="image/x-icon" href="${context:favicon2.ico}" />
<link rel="icon" href="${context:favicon2.ico}" type="image/x-icon" />
</head>

<t:border>
	<div class="t-zbreadcrumbs">
		<ul class="t-zbreadcrumbs">
			<li><a href="Index">${message:Index-crumb}</a></li>
			<li><t:eventlink t:event="breadCrumbs" t:context="literal:login">
					<plain>${message:login-crumb}</plain>
				</t:eventlink></li>
			<li><t:eventlink t:event="breadCrumbs"
					t:context="literal:forgot">
					<plain>${message:forgot-crumb}</plain>
				</t:eventlink></li>
			<li><a href="#">${message:changed-crumb}</a></li>

		</ul>
	</div>
	<infouser> ${message:mail-sended} <t:pagelink page="index">INDEX</t:pagelink>
	</infouser>

</t:border>

</html>