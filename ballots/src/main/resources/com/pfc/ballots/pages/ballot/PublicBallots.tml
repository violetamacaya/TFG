<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <head><title>${message:page-title}</title>
  <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="${context:favicon2.ico}" type="image/x-icon"/>
	</head>
  
	<t:border><div id="indexDiv">
	
				<t:if test="!showCurrent">
					${message:no-ballots}
				</t:if>
				<t:if test="showPublicActive">
						<h3>${message:actives}</h3><hr/>
						<div class="indexHead">
							<span>${message:title}</span>
							<span>${message:kind}</span>
							<span>${message:startDate}</span>
							<span>${message:endDate}</span>
							<span>${message:method}</span>
						</div>
							 <t:loop t:source="publicActiveBallots" t:value="ballot">
							 <div t:type="actionlink" t:id="votePublicBallot" t:context="ballot.id" class="indexRow">
								<span> ${ballot.name}&nbsp;&nbsp;&nbsp;&nbsp;</span>
							
								 <t:if test="ballot.teaching">
										<span>Docente&nbsp;&nbsp;&nbsp;</span>
										<p:else>
											<t:if test="ballot.publica">
												<span>Publica&nbsp;&nbsp;&nbsp;</span>
												<p:else>
													<span>Normal&nbsp;&nbsp;&nbsp;</span>
												</p:else>
											</t:if>
										</p:else>
								</t:if>
								<span>${startDate}</span>
								<span>${endDate}</span>
								 <span>${metodo}&nbsp;&nbsp;&nbsp;</span>
								 <br/>
							 </div>
							</t:loop>
						
					</t:if>
					<t:if test="showPublicEnded">
							
							 <h3>${message:ended}</h3><hr/>
							 <div class="indexHead">
							<span>${message:title}</span>
							<span>${message:kind}</span>
							<span>${message:startDate}</span>
							<span>${message:endDate}</span>
							<span>${message:method}</span>
						</div>
							 <t:loop t:source="publicEndedBallots" t:value="ballot">
							 	 <div t:type="actionlink" t:id="resultPublicBallot" context="ballot.id" class="indexRow" >
									<span>${ballot.name}&nbsp;&nbsp;&nbsp;&nbsp;</span>
								
									<t:if test="ballot.teaching">
											<span>Docente&nbsp;&nbsp;&nbsp;</span>
											<p:else>
												<t:if test="ballot.publica">
													<span>Publica&nbsp;&nbsp;&nbsp;</span>
													<p:else>
														<span>Normal&nbsp;&nbsp;&nbsp;</span>
													</p:else>
												</t:if>
											</p:else>
									</t:if>
								 <span>${startDate}</span>
								 <span>${endDate}</span>
								 <span>${metodo}&nbsp;&nbsp;&nbsp;</span><br/></div>	 
							</t:loop>
					</t:if>
	
	</div></t:border>
</html>