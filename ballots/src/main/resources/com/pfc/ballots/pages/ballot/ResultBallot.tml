<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <head>
	<link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="/favicon2.ico" type="image/x-icon"/>
	<title>${message:page-title}</title>
	
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">

      // Load the Visualization API and the piechart package.
      google.load('visualization', '1.0', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.setOnLoadCallback(drawChart);
      </script>
      
 </head>
 
	<t:border><div id="resultBallotDiv">
		
		<h1>${message:ballot-result}</h1><hr/>
		
		
		<h2>${ballot.name}</h2>
		<h2><small>${ballot.description}</small></h2>
		
		<div id="chart_div"></div>
		
		
		<t:if test="showRelMay">
			<table border="1px">
				<tr><th>${message:option}</th><th>${message:votes}</th></tr>
				<t:loop t:source="relMay.options" t:value="option">
					<tr>
						<td>${option}</td><td>${relMayVote}</td>
					</tr>
				</t:loop>
			</table>
		</t:if>
		
		
		<t:if test="showKemeny">
			<table border="1px">
				<tr><th>${message:permutation}</th><th>${message:votes}</th></tr>
				<t:loop t:source="kemeny.permutations" t:value="permutation">
					<tr>
						<td>${permutation}</td><td>${kemenyVote}</td>
					</tr>
				</t:loop>
			</table>
		</t:if>
		
		<t:if test="showBorda">
			<table border="1px">
				<tr><th>${message:option}</th><th>${message:votes}</th></tr>
				<t:loop t:source="borda.bordaOptions" t:value="bordaOpt">
					<tr>
						<td>${bordaOpt}</td><td>${bordaVote}</td>
					</tr>
				</t:loop>
			</table>
		</t:if>
		<t:if test="showRange">
			<table border="1px">
				<tr><th>${message:option}</th><th>${message:votes}</th></tr>
				<t:loop t:source="range.options" t:value="rangeOpt">
					<tr>
						<td>${rangeOpt}</td><td>${rangeVote}</td>
					</tr>
				</t:loop>
			</table>
		</t:if>
	
	</div></t:border>
</html>