<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title>
 <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="${context:favicon2.ico}" type="image/x-icon"/>
	</head>
   
	<t:border><div id="companyDiv">
	
		<h1>${message:create-company}</h1><hr/>
		<infouser>
		   <t:if test="isBadChar">
		   		<span class="error">${message:badChar}<br/></span>
		   </t:if>
		   <t:if test="badSecurity">
	   				<span class="error">${message:bad-security}</span>
	   		</t:if>
	   		<t:if test="isnotPassOk" >
					<span class="error">${message:pass-not-match}</span>
			</t:if>
			<t:if test="isnotDBNameAvalible" >
				<span class="error">${message:non-available-db}</span>	
			</t:if>
			<t:if test="badAlias">
			  	<span class="error">${message:bad-alias}</span>
			  </t:if>		
		   
	       <t:beaneditform t:id="form" submitlabel="${message:create-but}" object="company" reorder="active,companyName,DBName,alias" add="password,repeat">
		       <p:CompanyName>
		       		<t:label for="CompanyName"/>
		       		<t:textfield t:id="CompanyName" value="company.CompanyName"/>
		       		<span class="error">
			       		<t:if test="isnotCompanyNameAvalible">
							${message:non-available-company}	
						</t:if>
						<t:if test="isBadName">
			   				${message:badName}
			  			</t:if>
			  			
		  			</span>
		       </p:CompanyName>
		       <p:DBName>
		       		<t:label for="DBName"/>
		       		<t:textfield t:id="DBName" value="company.DBName" validate="required,minLength=6"/>
		       		
		       </p:DBName>
		       <p:password>
		       		<t:label for="password"/>
		       		<t:passwordfield t:id="password" validate="required,minLength=8"/>
		       		
		       </p:password>
		       
		       <p:repeat>
		       		<t:label for="repeat"/>
		       		<t:passwordfield t:id="repeat" validate="required,minLength=6"/>
		       </p:repeat>
		       
		       <p:firstName>
		       		<t:label for="firstName"/>
		       		<t:textfield t:id="firstName" value="company.firstName" validate="required"/>
		       </p:firstName>
		       
		       <p:lastName>
		       		<t:label for="lastName"/>
		       		<t:textfield t:id="lastName" value="company.lastName" validate="required"/>
		       </p:lastName>
		       
	       </t:beaneditform>
		</infouser>
	
	</div></t:border>
	
		
			
</html>
