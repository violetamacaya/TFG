<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter"><meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
     <head><title>${message:page-title}</title>
     <link rel="icon" type="image/x-icon" href="${context:favicon2.ico}"/>
	<link rel="icon" href="${context:favicon2.ico}" type="image/x-icon"/></head>
   
	<t:border><div id="userlistdiv">
	
	<h1>${message:add-by-file}</h1><hr/>
		<t:OutputRaw  value="${message:explanation}"/>
		${message:example-file}
		<t:eventlink t:event="returnstreamresponse">${message:here}</t:eventlink><br/><br/>
		
		
		<t:form t:id="uploadForm">
			<t:errors/>
			<t:if test="badFile">
				<span class="error">${message:bad-file}</span>
			</t:if>

			<div class="fileUpload btn btn-primary">
    			<input id="file" type="file" validate="required" />
			</div>
			
			<br/><br/>
			<input type="submit" class="boton" value="${message:upload}"/>		
		</t:form>
			
			
		<t:zone t:id="gridZone" id="gridZone" t:update="show">
			<t:if test="fileupload">
				<t:if test="!badFile">
					<t:grid source="persons" row="person" add="ID,Edit,Avalible,Add" exclude="password,sex,owner,lastLog,regDate" reorder="ID,Avalible" rowsperpage="10" inplace="true">
						<p:idcell>
							${person.id }
						</p:idcell>
						<p:avaliblecell>
							<t:if test="avalible">
								<img src="${asset:context:/layout/tickv.png}" />
							<p:else>
								<img src="${asset:context:/layout/tickx.png}" />
							</p:else>
							</t:if>
						</p:avaliblecell>
						<p:emailcell>
							${person.email }
							<t:if test="!okemail"><br/><font color="red">${message:bad-email}</font> </t:if>
						</p:emailcell>
						<p:firstnamecell>
							${person.firstname}
							<t:if test="!okfirstname"><br/><font color="red">${message:required}</font></t:if>
						</p:firstnamecell>
						<p:lastnamecell>
							${person.lastname }
							<t:if test="!oklastname"><br/><font color="red">${message:required}</font></t:if>
						</p:lastnamecell>
						<p:editcell>
							<t:if test="!editing">
								<t:actionlink t:id="editBut" context="person.id" zone="^"><button>${message:edit-but}</button></t:actionlink>
							</t:if>
						</p:editcell>  
						<p:addcell>
							<t:if test="avalible">
								<t:if test="complete">
									<t:actionlink t:id="addbut" context="person.id" zone="^"><button>${message:add-but}</button></t:actionlink>
								</t:if>
							</t:if>
						</p:addcell>
						<p:adminCell>
						<t:if test="person.admin">
							<img src="${asset:context:/layout/tickv.png}" />
						<p:else>
							<img src="${asset:context:/layout/tickx.png}" />
						</p:else>
						</t:if>
					</p:adminCell>
					<p:makerCell>
						<t:if test="person.maker">
							<img src="${asset:context:/layout/tickv.png}" />
						<p:else>
							<img src="${asset:context:/layout/tickx.png}" />
						</p:else>
						</t:if>
					</p:makerCell>
					<p:studentCell>
						<t:if test="person.student">
							<img src="${asset:context:/layout/tickv.png}" />
						<p:else>
							<img src="${asset:context:/layout/tickx.png}" />
						</p:else>
						</t:if>
					</p:studentCell>
					<p:ownerCell>
						<t:if test="person.owner">
							<img src="${asset:context:/layout/tickv.png}" />
						<p:else>
							<img src="${asset:context:/layout/tickx.png}" />
						</p:else>
						</t:if>
					</p:ownerCell>
						 
						<p:empty>
						</p:empty>     
					</t:grid>
					<t:actionlink t:id="endBut"><button>${message:finish-but}</button></t:actionlink>
					<t:actionlink t:id="addRowBut" zone="^"><button>${message:addrow-but}</button></t:actionlink>
					<t:actionlink t:id="addavaliblesBut" zone="^"><button>${message:addavailable-but}</button></t:actionlink>
				</t:if>
			</t:if>
		</t:zone>
		<t:zone t:id="editZone" id="editZone" t:update="show">
			<t:if test="editing">
				<t:form t:id="editForm" zone="^">
					<table>
						<tr>
							<td>
								<t:label for="adminbox"/>
							</td>
							<td>
								<t:checkbox t:id="adminbox" t:value="profile.admin"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="makerbox"/>
							</td>
							<td>
								<t:checkbox t:id="makerbox" t:value="profile.maker"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="studentbox"/>
							</td>
							<td>
								<t:checkbox t:id="studentbox" t:value="profile.student"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="emailfield"/>
							</td>
							<td>
								<t:textfield t:id="emailfield" t:value="profile.email"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="passfield"/>
							</td>
							<td>
								<t:textfield t:id="passfield" t:value="profile.password" validate="required,minLength=6"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="firstnamefield"/>
							</td>
							<td>
								<t:textfield t:id="firstnamefield" t:value="profile.firstName"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="lastnamefield"/>
							</td>
							<td>
								<t:textfield t:id="lastnamefield" t:value="profile.lastName"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="universityfield"/>
							</td>
							<td>
								<t:textfield t:id="universityfield" t:value="profile.university"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="cityfield"/>
							</td>
							<td>
								<t:textfield t:id="cityfield" t:value="profile.city"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:label for="countryfield"/>
							</td>
							<td>
								<t:textfield t:id="countryfield" t:value="profile.country"/>
							</td>
						</tr>
						<tr>
						<td><label>${message:fechaNac-label}</label></td>
						<td><t:DateField t:id="nacField" t:value="profile.fechaNac"/></td>
					</tr>
					<tr>
						<td><label>${message:phone-label}</label></td>
						<td><t:textfield t:id="phonefield" t:value="profile.phone"/></td>
					</tr>
					<tr>
						<td>
							<label>${message:address-label}</label>
						</td>
						<td>
							<t:textfield t:id="addressfield" t:value="profile.address"/>
						</td>
					</tr>
					<tr>
						<td><label>${message:DNI-label}</label></td>
						<td><t:textfield t:id="dniField" t:value="profile.DNI"/></td>
					</tr>
					
					<tr>
						<td><label>${message:carrera-label}</label></td>
						<td><t:textfield t:id="carreraField" t:value="profile.carrera"/></td>
					</tr>
					<tr>
						<td><label>${message:centro-label}</label></td>
						<td><t:textfield t:id="centroField" t:value="profile.centro"/></td>
					</tr>
						<tr>
							<td>
								<label><input t:type="submit" t:id="save" value="${message:save-but}"/></label>
							</td>
							<td>
								<input t:type="submit" t:id="cancel" value="${message:cancel-but}" t:mode="cancel"/>
							</td>
						</tr>
					</table>
					
				</t:form>
			</t:if>
		</t:zone>
			
	</div></t:border>
	
		
			
	


</html>
